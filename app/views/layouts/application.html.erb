<!DOCTYPE html>
<html>
  <head>
    <title>OauthClient</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p>notice</p>
    <p class="notice"><%= notice %></p>
    <p>alert</p>
    <p class="alert"><%= alert %></p>
    <%= link_to 'オレオレアカウントでログイン', user_doorkeeper_omniauth_authorize_path %>

    <% if user_signed_in? %>
      サインイン中
      <%= current_user %>
    <% end %>

    <%= yield %>
  </body>
</html>
